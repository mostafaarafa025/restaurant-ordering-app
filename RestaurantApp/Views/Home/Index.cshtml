@{
    ViewData["Title"] = "Home Page";
}


<!-- Hero Section -->
<div class="jumbotron jumbotron-fluid bg-dark text-white mt-1 mb-4" style="background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('/images/testimages/danaus-mx-Pk7KFLpD9G4-unsplash.jpg'); background-size: cover; background-position: center; height: 450px;">
    <div class="container h-100 d-flex align-items-center justify-content-center">
        <div class="text-center">
            <h1 class="display-4 font-weight-bold">Welcome to Taste Haven</h1>
            <p class="lead">Experience exquisite dining with our chef's special creations in a warm, inviting atmosphere.</p>
            <a href="#" class="btn btn-orange btn-lg">Order Now</a>
        </div>
    </div>
</div>

<!-- Main Content -->
<div class="container py-5">
 
    <section class="mb-0">
        <div class="row">
            <div class="col-md-4 mb-2">
                <div class="card h-150 shadow-sm text-center p-4">
                    <div class="text-orange mb-3">
                        <i class="fas fa-bolt fa-3x"></i> 
                    </div>
                    <h3 class="text-orange">Fast Delivery</h3>
                    <p class="text-muted">Get your favorite meals delivered to your doorstep in under 30 minutes.</p>
                </div>
            </div>
            <div class="col-md-4 mb-2">
                <div class="card h-150 shadow-sm text-center p-4">
                    <div class="text-orange mb-3">
                        <i class="fas fa-mobile-alt fa-3x"></i>  
                    </div>
                    <h3 class="text-orange">Easy Ordering</h3>
                    <p class="text-muted">Simple, intuitive app interface makes ordering food quick and hassle-free.</p>
                </div>
            </div>
            <div class="col-md-4 mb-2">
                <div class="card h-150 shadow-sm text-center p-4">
                    <div class="text-orange mb-3">
                        <i class="fas fa-credit-card fa-3x"></i>  
                    </div>
                    <h3 class="text-orange">Multiple Payments</h3>
                    <p class="text-muted">Pay with credit card, mobile wallet, or cash on delivery - your choice!</p>
                </div>
            </div>
        </div>
    </section>
</div>

    <!-- Specials Section -->
    <section class="py-5 bg-white rounded shadow-sm">
        <h2 class="text-center text-orange mb-5">Today's Specials</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="bg-secondary" style="height: 200px;"></div>
                    <div class="card-body">
                        <h3 class="card-title text-orange">Grilled Salmon</h3>
                        <p class="card-text font-weight-bold text-orange mb-2">$24.99</p>
                        <p class="card-text">Fresh Atlantic salmon grilled to perfection, served with asparagus and lemon butter sauce.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="bg-secondary" style="height: 200px;"></div>
                    <div class="card-body">
                        <h3 class="card-title text-orange">Truffle Risotto</h3>
                        <p class="card-text font-weight-bold text-orange mb-2">$19.99</p>
                        <p class="card-text">Creamy Arborio rice cooked with wild mushrooms and finished with truffle oil and parmesan.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="bg-secondary" style="height: 200px;"></div>
                    <div class="card-body">
                        <h3 class="card-title text-orange">Beef Tenderloin</h3>
                        <p class="card-text font-weight-bold text-orange mb-2">$29.99</p>
                        <p class="card-text">Premium aged beef tenderloin, cooked to your preference, with red wine reduction.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
